@using NewsEngine.Models;
@{
    ViewBag.Title = "Razor тест";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

@if (User.IsInRole("admin"))
{
    <h3>Приветствуем, Админ!</h3>
}
else if (User.Identity.IsAuthenticated)
{
    <h3>Приветствуем, @User.Identity.Name!</h3>
}
else
{
    <h3>Приветствуем, Гость!</h3>
}
