 <h4>1.5.3 Список людей </h4>
    <table border="1" cellpadding="6" style="border-color:lightgray">
        <tr style="background-color:whitesmoke">
            <td>№</td>
            <td>Имя</td>
            <td>Возраст</td>
            <td>Место рождения</td>
        </tr>
    @{foreach (Person person in Persons.Where(p => p.id > 0))
    {
        if (person.age >= 35)
        {
            <tr style="background-color:lightgoldenrodyellow">
                <td>@(person.id)</td>
                <td>@(person.name)</td>
                <td>@(person.age)</td>
                <td>@(person.place)</td>
            </tr>}
        else
        {
            <tr style="background-color:lightcyan">
                <td>@(person.id)</td>
                <td>@(person.name)</td>
                <td>@(person.age)</td>
                <td>@(person.place)</td>
            </tr>}
    }
    }
