@{
    ViewBag.Title = "Index";
}

<div class="form-group row">
    <div class="col-md-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Номиналы для пополнения</h3>
            </div>
            <div class="panel-body">
                <div id="CoinsHolder" class="btn-block"></div>
            </div>
        </div>
    </div>
    <div class="col-md-2 text-center">
        <div class="btn btn-lg btn-default" id="addCoin" onclick="addSelectedCoin()" disabled="true">Пополнить</div>
    </div>
         <div class="col-md-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">Сумма на балансе</h4>
            </div>
            <div class="panel-body">
                <form id="balanceForm" name="balanceForm">
                    <div class="pull-right">
                        <div><input class="form-control alert-danger balanceField" value=0 id="balance" name="balance"></div>                        
                        <div class="btn btn-lg btn-default" onclick="getChange()">Сдача</div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group row">
                <div class="col-md-10">
                    <div id="DrinksHolder" class="btn-block parent"></div>
                </div>
                <div class="col-md-2">
                    <div class="btn btn-lg btn-danger pull-right" id="buyDrink" disabled="true" onclick="buyDrink()">Купить</div>
                </div>
            </div>
        </div>
    </div> 
</div>
<script src=@Url.Content("~/Scripts/JavaScriptForIndexView.js") type="text/javascript"></script>